---
import Action from "@/components/Action.astro";
import GithubIcon from "@/icons/socials/GithubIcon.astro";

interface Props {
  data: {
    title: string;
    subTitle: string;
    primaryCta: string;
    secondaryCta: string;
    highlightedTitle?: string;
  };
}

const { data } = Astro.props;
---

<section id="introduction" class="mt-40 h-screen">
  <div class="flex justify-center items-center gap-30">
    <div class="md:w-1/2">
      <h1 class="text-4xl text-center font-semibold md:text-6xl">
        <span class="text-primary"> {data.secondaryCta} </span>
        {data.title}
        <span class="text-secondary"> {data.highlightedTitle} </span>
      </h1>
      <h2 class="mt-10 text-lg text-center opacity-80 md:text-2xl">
        {data.subTitle}
      </h2>
      <div class="flex justify-evenly mt-10">
        <Action
          as="a"
          type="button"
          class="bg-black text-white flex items-center justify-center gap-[5px]"
          href="https://github.com/AND3SIL4/whatsapp-project"
          target="_blank"
        >
          {data.primaryCta}
          <GithubIcon />
        </Action>
      </div>
    </div>
    <div class="">
      <img
        src="/banner-company.webp"
        alt="Image of cellphone"
        title="Image of cellphone"
        class="scale-75"
      />
    </div>
  </div>
  <div class="flex justify-center">
    <Action
      as="a"
      class="flex justify-center items-center animate-bounce border-2 border-transparent bg-primary text-white rounded-full w-14 h-14 mt-16 hover:bg-white hover:text-primary hover:border-primary transition"
      href="#services-section"
      title="arrow down icon"
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 24 24"
        stroke-width="1.5"
        stroke="currentColor"
        class="w-8 h-8"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          d="M19.5 13.5 12 21m0 0-7.5-7.5M12 21V3"></path>
      </svg>
    </Action>
  </div>
</section>

<style>
  @keyframes fadeIn {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }

  #introduction {
    opacity: 0;
    animation: fadeIn 0.8s ease-in-out forwards;
  }
</style>
